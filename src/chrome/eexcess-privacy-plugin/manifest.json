{
  "manifest_version": 2,

  "name": "EEXCESS Privacy Prototype Extension",
  "description": "This extension allows to obtain content recommendations from the EEXCESS service ",
  "version": "1.0",

  "browser_action": {
    "default_icon": "media/icon.png",
    "default_title": "EEXCESS",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
  	{
  	  "matches": ["http://*/*", "https://*/*"],
  	  "js": ["js/inject.js"]
    }
  ],
  
  
  "background": {
    "scripts": ["lib/jquery-1.10.1.min.js","js/background.js"]
  },
  
  "web_accessible_resources": [
  	"oauth/*"
  ],
  
  "permissions": [
    "http://*/*",
    "https://*/*",
    "notifications",
    "tabs",
    "geolocation"
  ]
}